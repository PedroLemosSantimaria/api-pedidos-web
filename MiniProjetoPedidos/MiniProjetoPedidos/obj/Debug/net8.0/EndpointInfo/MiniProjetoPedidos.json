  },
  "components": {
    "schemas": {
      "ItemPedido": {
        "required": [
          "codigoProduto",
          "descricaoProduto",
          "quantidade",
          "valorProduto"
        ],
        "type": "object",
        "properties": {
          "codigoProduto": {
            "minLength": 1,
            "type": "string"
          },
          "quantidade": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "descricaoProduto": {
            "minLength": 1,
            "type": "string"
          },
          "valorProduto": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Pedido": {
        "required": [
          "dataEntrega",
          "dataSolicitacao",
          "itens",
          "numeroPedido"
        ],
        "type": "object",
        "properties": {
          "numeroPedido": {
            "minLength": 1,
            "type": "string"
          },
          "dataSolicitacao": {
            "type": "string",
            "format": "date-time"
          },
          "dataEntrega": {
            "type": "string",
            "format": "date-time"
          },
          "observacao": {
            "type": "string",
            "nullable": true
          },
          "itens": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ItemPedido"
            }
          }
        },
        "additionalProperties": false
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}