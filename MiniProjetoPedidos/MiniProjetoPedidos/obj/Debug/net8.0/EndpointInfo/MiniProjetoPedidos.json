    "/api/Pedido": {
      "post": {
        "tags": [
          "Pedido"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pedido"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Pedido"
